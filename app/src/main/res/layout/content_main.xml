<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <!--<TextView android:text="Hello World!" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/editText">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editText"
            android:layout_alignParentStart="true"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="sin"
                android:layout_weight="1"
                android:id="@+id/sin" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="cos"
                android:layout_weight="1"
                android:id="@+id/cos" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="tan"
                android:layout_weight="1"
                android:id="@+id/tan" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ln"
                android:layout_weight="1"
                android:id="@+id/ln" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="e^x"
                android:layout_weight="1"
                android:id="@+id/ex" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editText"
            android:layout_alignParentStart="true"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="asin"
                android:layout_weight="1"
                android:id="@+id/asin" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="acos"
                android:layout_weight="1"
                android:id="@+id/acos" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="atan"
                android:layout_weight="1"
                android:id="@+id/atan" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="("
                android:layout_weight="1"
                android:id="@+id/openBracket" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=")"
                android:layout_weight="1"
                android:id="@+id/closeBracket" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editText"
            android:layout_alignParentStart="true"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="x^y"
                android:layout_weight="1"
                android:id="@+id/xy" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="x2"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:id="@+id/x2" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="x!"
                android:layout_weight="1"
                android:id="@+id/xfactorial" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="x%"
                android:layout_weight="1"
                android:id="@+id/xremainder" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="\367"
                android:layout_weight="1"
                android:id="@+id/divider" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editText"
            android:layout_alignParentStart="true"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AC"
                android:layout_weight="1"
                android:id="@+id/AC" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:layout_weight="1"
                android:id="@+id/seven" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:layout_weight="1"
                android:id="@+id/eight" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:layout_weight="1"
                android:id="@+id/night" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="\327"
                android:layout_weight="1"
                android:id="@+id/product" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editText"
            android:layout_alignParentStart="true"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="DEL"
                android:layout_weight="1"
                android:id="@+id/DEL" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:layout_weight="1"
                android:id="@+id/four" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:layout_weight="1"
                android:id="@+id/five" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:layout_weight="1"
                android:id="@+id/six" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:layout_weight="1"
                android:id="@+id/minus" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editText"
            android:layout_alignParentStart="true"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="STO"
                android:layout_weight="1"
                android:id="@+id/STO" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:layout_weight="1"
                android:id="@+id/one" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:layout_weight="1"
                android:id="@+id/two" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:layout_weight="1"
                android:id="@+id/three" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:layout_weight="1"
                android:id="@+id/plus" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editText"
            android:layout_alignParentStart="true"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="RCL"
                android:layout_weight="1"
                android:id="@+id/RCL" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_weight="1"
                android:id="@+id/zero" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                android:layout_weight="1"
                android:id="@+id/dot" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="PI"
                android:layout_weight="1"
                android:id="@+id/PI" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:layout_weight="1"
                android:id="@+id/equal" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
